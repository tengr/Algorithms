package InterviewBitJava;

public class ScrambleString {
	public static void main(String[] args){
		ScrambleString ins = new ScrambleString();
		System.out.println(ins.isScramble("greta", "great"));
	}
	public int isScramble(final String a, final String b) {
	    if(a.length() != b.length()) return -1;
	    for(int start = 0, end = 0; end <= a.length(); ){
	    	if(end == a.length()) {
	            if(!isReverse(a,b,start,end - 1)) return 0;
	            else return 1;
	    	}
	        if(a.charAt(end) == b.charAt(end)) {
	            if(isReverse(a,b,start,end - 1)){
	            	end++;
	            	start = end;
	            }
	            else end++;
	        }
	        else end++;
	    } 
	    return 1;
	}
	
	public boolean isReverse(final String a, final String b, int start, int end) {
	    if(start > end) return true;
	    for(int i = start, j = end; i < j; i++, j--) {
	        if(a.charAt(i) != b.charAt(j)) return false;
	    }   
	    return true;
	}
}
