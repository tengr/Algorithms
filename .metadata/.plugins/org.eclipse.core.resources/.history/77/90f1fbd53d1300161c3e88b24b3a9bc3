package InterviewBitJava;

public class Inverse {
	public int countInverse(final List<Integer> a) {
		int [] arr = a.toArray();
		return countInverse(arr);
	}
	
	public int countInverse(int[] arr) {
		return countInverse(arr, 0, arr.length / 2, arr.length -1);
	}
	
	public int countInverse(int[] arr, int s1, int s2, int end){
		if(s1 >= s2) return 0;
		//s1 .. s2-1, s2 .. end
		int[] temp = new int[end - s1 + 1];
		for(int i = s1, j = s2, k = 0; i < s2 && j < end + 1; ){
			if(arr[i] <= arr[j] || j == end + 1) temp[k++] = arr[i++];
			else temp[k++] = arr[j++];
		}
		
	}
}
