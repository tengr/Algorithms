package tengr.tests;

import org.openqa.selenium.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import static org.junit.Assert.*;
import java.util.regex.Pattern;

public class JavaRC {
	private Selenium selenium;

	@Before
	public void setUp() throws Exception {
		selenium = new DefaultSelenium("localhost", 4444, "*chrome", "http://todomvc.com/");
		selenium.start();
	}

	@Test
	public void testJavaRC() throws Exception {
		selenium.open("/examples/angularjs/#/");
		selenium.type("id=new-todo", "todo1");
		selenium.click("css=label.ng-binding");
		selenium.type("//ul[@id='todo-list']/li/form/input", "todo2");
		selenium.click("xpath=(//input[@type='checkbox'])[2]");
		selenium.click("xpath=(//input[@type='checkbox'])[2]");
		selenium.type("id=new-todo", "todo3");
		selenium.click("id=toggle-all");
		selenium.click("link=Completed");
		selenium.click("css=button.destroy");
		selenium.click("id=clear-completed");
	}

	@After
	public void tearDown() throws Exception {
		selenium.stop();
	}
}
